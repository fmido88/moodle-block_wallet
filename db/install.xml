<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/wallet/db" VERSION="20170829" COMMENT="XMLDB file for Moodle blocks/wallet"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="wallet_items" COMMENT="Fake items added to be purchased during wallet topup">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="cost" TYPE="char" LENGTH="25" NOTNULL="true" SEQUENCE="false" COMMENT="the price should be added"/>
        <FIELD NAME="currency" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="EGP" SEQUENCE="false" COMMENT="the currency"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="the id of the user doing the operation"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="vc_sms" COMMENT="messages from vodafone cash">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="subject" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="message" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="amount" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="sender" TYPE="int" LENGTH="13" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="time" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="done" TYPE="int"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>